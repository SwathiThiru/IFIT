<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=""com.example.android.ifit.MainActivity"">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cal_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECOMMENDED CALORIES : "
                android:textSize="16dp"
                android:textColor="@color/colorwhite"/>
            <TextView
                android:id="@+id/cal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,800 CAL"
                android:textSize="16dp"
                android:textColor="@color/colorwhite"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout

        android:layout_below="@id/layout1"
        android:background="@color/colorPrimary"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout4">
        <ProgressBar
            android:id="@+id/pb_step"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:progressBackgroundTint="@color/colorAccent"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/layout4"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALORIES BURNT :"
                android:textSize="16dp"
                android:textColor="@color/colorwhite"/>
            <TextView
                android:id="@+id/hr_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="900 CAL"
                android:textSize="16dp"
                android:textColor="@color/colorwhite"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout2"
        android:background="@color/colorAccent"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMAINING CALORIES : "
                android:textSize="16dp"
                android:textColor="@color/colorwhite"/>
            <TextView
                android:id="@+id/cal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="900 CAL"
                android:textSize="16dp"
                android:textColor="@color/colorwhite"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
